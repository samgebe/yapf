import numpy as np
import matplotlib
import matplotlib.pyplot as plt 
#Problem 1
def temperatureConvert(degreesCelsius):
    degreesFaranheit = 9./5. * degreesCelsius + 32
    return degreesFaranheit

#Problem 3
def temperatureConvertPrintsThrice(degreesCelsius):
    degreesFaranheit = round(9/5 * degreesCelsius + 32, 1)
    percent_formatting = '%.0f degrees Celsius is %.1f degrees Faranheit' % (degreesCelsius, degreesFaranheit)
    string_formatting = "{:.0f} degrees Celsius is {:.1f} degrees Faranheit"
    f_strings = f"{degreesCelsius:.0f} degrees Celsius is {degreesFaranheit:.1f} degrees Faranheit"
    print(percent_formatting)
    print(string_formatting.format(degreesCelsius, degreesFaranheit))
    print(f_strings)

#Problem 4
def myPolynomial(x):
    return 2*x**2 - 3*x + 2

#Problem 5 
def addOddsTONWithFor(n = 10000):
    ans = 0
    for i in range(n + 1):
        if i % 2 !=0:
            ans += i
    return ans 

def addOddsTONWithWhile(n = 10000):
    index = 1
    ans = 0
    while index <= n:
        if index % 2 != 0:
            ans += index
            index += 2
    return ans

def addOddsTONWithNumpy(n = 10000):
    array1 = np.arange(n) + 1 
    array2 = array1[::2]
    return sum(array2)

#Problem 6
def plotMyPolynomial():
    x = np.arange(-5,5)
    f = myPolynomial(x)
    fig, ax = plt.subplots()
    ax.plot(x, f)
    ax.set(xlabel = 'Values of x', ylabel= 'Values of y', title = 'My Polynomial')
    
    ax.grid
    plt.show()
    
